{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "-std=c99",
                "-W",
                "${file}",
                "-o",
                "./build/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "*.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": "build",
        },
        {
            "label": "Rebuid",
            "dependsOn": [
                "Clean",
                "Build"
            ],
            "dependsOrder": "sequence",
            "group": "build"
        },
        {
            "label": "Preprocess",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-E",
                "${file}",
                ">",
                "./build/${fileBasenameNoExtension}.i"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
        }
    ]
}